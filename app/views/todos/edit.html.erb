<% content_for :title, "ToDo編集" %>

<div class="space-y-6">
  <div class="flex flex-col gap-2 sm:flex-row sm:items-center sm:justify-between">
    <div>
      <h1 class="text-3xl font-semibold text-slate-900">ToDo編集</h1>
      <p class="text-sm text-slate-500">内容を更新し、最新の状態を維持しましょう。</p>
    </div>
    <div class="flex flex-col gap-2 sm:flex-row">
      <%= link_to "詳細へ戻る", @todo, class: "inline-flex items-center justify-center rounded-lg border border-slate-200 px-4 py-2 text-sm font-medium text-slate-700 transition hover:border-slate-300 hover:text-slate-900" %>
      <%= link_to "一覧へ戻る", todos_path, class: "inline-flex items-center justify-center rounded-lg border border-slate-200 px-4 py-2 text-sm font-medium text-slate-700 transition hover:border-slate-300 hover:text-slate-900" %>
    </div>
  </div>

  <div class="rounded-xl border border-slate-200 bg-white p-6 shadow-sm">
    <%= render "form", todo: @todo %>
  </div>
</div>
