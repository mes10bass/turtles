<div id="<%= dom_id todo %>" class="rounded-xl border border-slate-200 bg-white p-6 shadow-sm">
  <dl class="space-y-4 text-sm">
    <div class="space-y-1">
      <dt class="text-slate-500">タイトル</dt>
      <dd class="text-base font-medium text-slate-900"><%= todo.title %></dd>
    </div>
    <div class="space-y-1">
      <dt class="text-slate-500">内容</dt>
      <dd class="text-slate-700 whitespace-pre-wrap"><%= todo.content %></dd>
    </div>
    <div class="grid gap-4 sm:grid-cols-2">
      <div class="space-y-1">
        <dt class="text-slate-500">開始日</dt>
        <dd class="text-slate-700"><%= todo.start_on ? l(todo.start_on) : "未設定" %></dd>
      </div>
      <div class="space-y-1">
        <dt class="text-slate-500">終了日</dt>
        <dd class="text-slate-700"><%= todo.end_on ? l(todo.end_on) : "未設定" %></dd>
      </div>
    </div>
    <div class="space-y-1">
      <dt class="text-slate-500">進捗</dt>
      <dd>
        <% if todo.is_finished? %>
          <span class="inline-flex items-center rounded-full bg-emerald-50 px-3 py-1 text-xs font-semibold text-emerald-700">完了</span>
        <% else %>
          <span class="inline-flex items-center rounded-full bg-amber-50 px-3 py-1 text-xs font-semibold text-amber-700">進行中</span>
        <% end %>
      </dd>
    </div>
  </dl>
</div>
