<%= render "devise/shared/container",
           resource: resource,
           title: "アカウント設定",
           description: "登録情報の更新やアカウント削除を行えます。",
           links: false do %>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>
    <div class="space-y-2">
      <%= f.label :email, "メールアドレス", class: "block text-sm font-medium text-slate-700" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 block w-full rounded-lg border border-slate-300 bg-white px-3 py-2 text-slate-900 focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p class="rounded-lg border border-amber-200 bg-amber-50 px-3 py-2 text-sm text-amber-700">
        現在 <%= resource.unconfirmed_email %> に確認メールを送信中です。
      </p>
    <% end %>

    <div class="space-y-2">
      <%= f.label :password, "新しいパスワード", class: "block text-sm font-medium text-slate-700" %>
      <p class="text-xs text-slate-500">※ 変更しない場合は空欄のままで構いません。</p>
      <% if @minimum_password_length %>
        <p class="text-xs text-slate-500">※ パスワードは最低 <%= @minimum_password_length %> 文字必要です。</p>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "mt-1 block w-full rounded-lg border border-slate-300 bg-white px-3 py-2 text-slate-900 focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
    </div>

    <div class="space-y-2">
      <%= f.label :password_confirmation, "新しいパスワード（確認用）", class: "block text-sm font-medium text-slate-700" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mt-1 block w-full rounded-lg border border-slate-300 bg-white px-3 py-2 text-slate-900 focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
    </div>

    <div class="space-y-2">
      <%= f.label :current_password, "現在のパスワード", class: "block text-sm font-medium text-slate-700" %>
      <p class="text-xs text-slate-500">変更内容を確定するために現在のパスワードが必要です。</p>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "mt-1 block w-full rounded-lg border border-slate-300 bg-white px-3 py-2 text-slate-900 focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
    </div>

    <div>
      <%= f.submit "更新する", class: "inline-flex w-full justify-center rounded-lg bg-indigo-600 px-4 py-2 text-sm font-semibold text-white shadow-sm transition hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
    </div>
  <% end %>

  <div class="space-y-3 rounded-lg border border-red-200 bg-red-50 p-4">
    <h2 class="text-base font-semibold text-red-700">アカウント削除</h2>
    <p class="text-sm text-red-700">アカウントを削除すると、関連データは復元できません。本当に削除する場合のみ実行してください。</p>
    <%= button_to "アカウントを削除", registration_path(resource_name), method: :delete, data: { turbo_confirm: "本当にアカウントを削除しますか？" }, class: "inline-flex w-full justify-center rounded-lg border border-red-300 bg-white px-4 py-2 text-sm font-semibold text-red-700 transition hover:border-red-400 hover:text-red-800" %>
  </div>

  <div class="text-center text-sm">
    <%= link_to "トップページへ戻る", root_path, class: "font-medium text-indigo-600 hover:text-indigo-500" %>
  </div>

  <%= render "devise/shared/links" %>
<% end %>
