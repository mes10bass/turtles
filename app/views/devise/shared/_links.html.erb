<% link_class = "font-medium text-indigo-600 hover:text-indigo-500" %>

<div class="space-y-3 text-center text-sm text-slate-600">
  <% if controller_name != 'sessions' %>
    <div>
      <%= link_to "ログイン画面へ", new_session_path(resource_name), class: link_class %>
    </div>
  <% end %>

  <% if devise_mapping.registerable? && controller_name != 'registrations' %>
    <div>
      <%= link_to "新規登録はこちら", new_registration_path(resource_name), class: link_class %>
    </div>
  <% end %>

  <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <div>
      <%= link_to "パスワードを再設定", new_password_path(resource_name), class: link_class %>
    </div>
  <% end %>

  <% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <div>
      <%= link_to "確認メールを再送", new_confirmation_path(resource_name), class: link_class %>
    </div>
  <% end %>

  <% if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <div>
      <%= link_to "ロック解除メールを再送", new_unlock_path(resource_name), class: link_class %>
    </div>
  <% end %>

  <% if devise_mapping.omniauthable? %>
    <div class="space-y-2">
      <% resource_class.omniauth_providers.each do |provider| %>
        <%= button_to "#{OmniAuth::Utils.camelize(provider)} でログイン", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "inline-flex w-full justify-center rounded-lg border border-slate-300 bg-white px-4 py-2 font-medium text-slate-700 shadow-sm transition hover:border-indigo-400 hover:text-indigo-600" %>
      <% end %>
    </div>
  <% end %>
</div>
