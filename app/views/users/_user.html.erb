<div id="<%= dom_id user %>" class="rounded-xl border border-slate-200 bg-white p-6 shadow-sm">
  <dl class="space-y-4 text-sm">
    <div class="space-y-1">
      <dt class="text-slate-500">メールアドレス</dt>
      <dd class="text-base font-medium text-slate-900"><%= user.email %></dd>
    </div>
    <div class="space-y-1">
      <dt class="text-slate-500">登録日時</dt>
      <dd class="text-slate-700"><%= l user.created_at, format: :long %></dd>
    </div>
    <div class="space-y-1">
      <dt class="text-slate-500">更新日時</dt>
      <dd class="text-slate-700"><%= l user.updated_at, format: :long %></dd>
    </div>
  </dl>
</div>
