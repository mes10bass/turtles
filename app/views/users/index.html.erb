<% content_for :title, "ユーザー管理" %>

<div class="space-y-6">
  <% if notice.present? %>
    <p class="inline-flex items-center gap-2 rounded-lg border border-emerald-200 bg-emerald-50 px-3 py-2 text-sm font-medium text-emerald-700" id="notice">
      <span><%= notice %></span>
    </p>
  <% end %>

  <div class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
    <div>
      <h1 class="text-3xl font-semibold text-slate-900">ユーザー管理</h1>
      <p class="text-sm text-slate-500">ユーザーの新規作成、確認、編集、削除が行えます。</p>
    </div>
    <%= link_to "ユーザーを追加", new_user_path, class: "inline-flex items-center justify-center rounded-lg bg-indigo-600 px-4 py-2 text-sm font-semibold text-white shadow-sm transition hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
  </div>

  <% if @users.any? %>
    <div class="overflow-hidden rounded-xl border border-slate-200 bg-white shadow-sm">
      <table class="min-w-full divide-y divide-slate-200">
        <thead class="bg-slate-50 text-left text-sm font-semibold text-slate-600">
          <tr>
            <th scope="col" class="px-6 py-3">メールアドレス</th>
            <th scope="col" class="px-6 py-3">登録日</th>
            <th scope="col" class="px-6 py-3 text-right">操作</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-slate-200 bg-white text-sm text-slate-700">
          <% @users.each do |user| %>
            <tr id="<%= dom_id(user) %>">
              <td class="px-6 py-4 align-top">
                <p class="font-medium text-slate-900"><%= user.email %></p>
              </td>
              <td class="px-6 py-4 align-top whitespace-nowrap text-slate-500">
                <%= l user.created_at, format: :long %>
              </td>
              <td class="px-6 py-4 align-top">
                <div class="flex justify-end gap-2">
                  <%= link_to "詳細", user, class: "inline-flex items-center justify-center rounded-lg border border-slate-200 px-3 py-1.5 text-xs font-medium text-slate-700 transition hover:border-slate-300 hover:text-slate-900" %>
                  <%= link_to "編集", edit_user_path(user), class: "inline-flex items-center justify-center rounded-lg border border-slate-200 px-3 py-1.5 text-xs font-medium text-slate-700 transition hover:border-slate-300 hover:text-slate-900" %>
                  <%= button_to "削除", user, method: :delete, data: { turbo_confirm: "ユーザーを削除しますか？" }, class: "inline-flex items-center justify-center rounded-lg bg-red-600 px-3 py-1.5 text-xs font-semibold text-white transition hover:bg-red-500" %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="rounded-xl border border-dashed border-slate-300 bg-white px-6 py-12 text-center">
      <p class="text-sm text-slate-600">登録済みのユーザーはいません。まずは「ユーザーを追加」から作成してください。</p>
    </div>
  <% end %>
</div>
