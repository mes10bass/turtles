<%= render "devise/shared/error_messages", resource: user %>

<%= form_with(model: user, class: "space-y-6") do |form| %>
  <div class="space-y-2">
    <%= form.label :email, "メールアドレス", class: "block text-sm font-medium text-slate-700" %>
    <%= form.email_field :email, class: [
          "mt-1 block w-full rounded-lg border bg-white px-3 py-2 text-slate-900 placeholder:text-slate-400 focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-500",
          { "border-slate-300": user.errors[:email].none?, "border-red-400 focus:border-red-500 focus:ring-red-500": user.errors[:email].any? }
        ] %>
  </div>

  <div class="space-y-2">
    <%= form.label :password, "パスワード", class: "block text-sm font-medium text-slate-700" %>
    <% if user.new_record? %>
      <p class="text-xs text-slate-500">※ ログインに使用するパスワードを設定してください。</p>
    <% else %>
      <p class="text-xs text-slate-500">※ 変更しない場合は空欄のままで問題ありません。</p>
    <% end %>
    <% if defined?(@minimum_password_length) && @minimum_password_length.present? %>
      <p class="text-xs text-slate-500">※ パスワードは最低 <%= @minimum_password_length %> 文字必要です。</p>
    <% end %>
    <%= form.password_field :password, class: [
          "mt-1 block w-full rounded-lg border bg-white px-3 py-2 text-slate-900 placeholder:text-slate-400 focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-500",
          { "border-slate-300": user.errors[:password].none?, "border-red-400 focus:border-red-500 focus:ring-red-500": user.errors[:password].any? }
        ], autocomplete: "new-password" %>
  </div>

  <div class="space-y-2">
    <%= form.label :password_confirmation, "パスワード（確認用）", class: "block text-sm font-medium text-slate-700" %>
    <%= form.password_field :password_confirmation, class: [
          "mt-1 block w-full rounded-lg border bg-white px-3 py-2 text-slate-900 placeholder:text-slate-400 focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-500",
          { "border-slate-300": user.errors[:password_confirmation].none?, "border-red-400 focus:border-red-500 focus:ring-red-500": user.errors[:password_confirmation].any? }
        ], autocomplete: "new-password" %>
  </div>

  <div>
    <%= form.submit(user.new_record? ? "登録する" : "更新する", class: "inline-flex w-full justify-center rounded-lg bg-indigo-600 px-4 py-2 text-sm font-semibold text-white shadow-sm transition hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600") %>
  </div>
<% end %>
