<header class="bg-white shadow-sm border-b border-slate-200">
  <div class="mx-auto flex w-full max-w-6xl items-center justify-between px-4 py-4 sm:px-6">
    <div class="flex items-center gap-3">
      <%= link_to root_path, class: "inline-flex items-center gap-2 text-lg font-semibold text-slate-900 hover:text-indigo-600" do %>
        <span class="inline-flex h-10 w-10 items-center justify-center rounded-full bg-indigo-600 text-white font-bold">T</span>
        <span>Turtles</span>
      <% end %>
    </div>

    <nav class="flex items-center gap-3 text-sm font-medium text-slate-600">
      <%= link_to "ホーム", root_path, class: "rounded-lg px-3 py-2 hover:bg-slate-100 hover:text-slate-900" %>
      <% if user_signed_in? %>
      <%= link_to "ユーザー一覧", users_path, class: "rounded-lg px-3 py-2 hover:bg-slate-100 hover:text-slate-900" %>
      <%= link_to "ToDo", todos_path, class: "rounded-lg px-3 py-2 hover:bg-slate-100 hover:text-slate-900" %>
        <%= link_to "プロフィール", edit_user_registration_path, class: "rounded-lg px-3 py-2 hover:bg-slate-100 hover:text-slate-900" %>
        <span class="hidden sm:inline-flex items-center rounded-lg bg-slate-100 px-3 py-2 text-slate-700"><%= current_user.email %></span>
        <%= button_to "ログアウト", destroy_user_session_path,
                      method: :delete,
                      class: "inline-flex items-center rounded-lg bg-indigo-600 px-3 py-2 text-white hover:bg-indigo-500",
                      data: { turbo_confirm: "ログアウトしますか？" },
                      form: { class: "inline" } %>
      <% else %>
        <%= link_to "ログイン", new_user_session_path, class: "rounded-lg px-3 py-2 hover:bg-slate-100 hover:text-slate-900" %>
        <%= link_to "新規登録", new_user_registration_path, class: "inline-flex items-center rounded-lg bg-indigo-600 px-3 py-2 text-white hover:bg-indigo-500" %>
      <% end %>
    </nav>
  </div>
</header>
